@import 'fl/imports'

.fl-app
	font-family sans-serif
	font-size 13px
	margin 10px auto
	width 1133px

.fl-unit
	background transparent none scroll 0 0 no-repeat
	size 16px 16px

	&[fl-type=militia]
		&[fl-player=n0]
			background-image url(../images/militia-0.png)
		&[fl-player=n1]
			background-image url(../images/militia-1.png)
	&[fl-type=mcv]
		&[fl-player=n0]
			background-image url(../images/mcv-0.png)
		&[fl-player=n1]
			background-image url(../images/mcv-1.png)

.fl-title
	font-weight bold
	margin-bottom 5px
