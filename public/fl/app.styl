.fl-resource
	background transparent none scroll 0 0 no-repeat
	size 16px 16px

	&[fl-type=copper]
		background-image url(../images/copper.png)
	&[fl-type=iron]
		background-image url(../images/iron.png)
	&[fl-type=oil]
		background-image url(../images/oil.png)
	&[fl-type=aluminum]
		background-image url(../images/aluminum.png)
	&[fl-type=yard]
		background-image url(../images/yard.png)
	&[fl-type=light]
		background-image url(../images/light.png)
	&[fl-type=heavy]
		background-image url(../images/heavy.png)
	&[fl-type=airport]
		background-image url(../images/airport.png)

.fl-title
	font-weight bold
	margin 5px 0

button
	background-color #303030
	border-color #303030
	color white
	cursor pointer

	&:hover
		background-color #606060
		border-color #606060

.fl-screen-win
	text-align center

	&-title
		font-size 100px
		margin 80px 0 30px

	&-statistics
		margin 10px auto
		width 400px

		> div
			margin 5px 0

		&-left
			float left
			text-align right
			width 195px

		&-right
			float right
			text-align left
			width 195px

	&-wisdom
		font-family serif
		font-style italic
		font-size 20px
		margin 30px 0

	&-refresh
		font-size 20px

.ui-tooltip
	font-size 13px
	opacity .8
	pointer-events none

.ui-widget-content
	background black
