@import 'fl/imports'

.fl-app
	cursor default
	font-family sans-serif
	font-size 13px
	margin 10px auto
	overflow hidden
	white-space nowrap
	width 1133px

	&-monitor
	&-screen-win
		display inline-block
		vertical-align top
		white-space normal

	&-screen-win
		width 610px

.fl-good
	color #00DD00

.fl-bad
	color #FF0000

.fl-id
	color #49F

.fl-base
	background transparent none scroll 0 0 no-repeat
	size 20px 20px

	&[fl-player="0"]
		background-image url(../images/base-0.png)
	&[fl-player="1"]
		background-image url(../images/base-1.png)

.fl-unit
	background transparent none scroll 0 0 no-repeat
	size 16px 16px

	&[fl-type=mcv]
		background-image url(../images/mcv.png)
		&[fl-player="0"]
			background-image url(../images/mcv-0.png)
		&[fl-player="1"]
			background-image url(../images/mcv-1.png)
		&.fl-moved
			background-image url(../images/mcv.png)
	&[fl-type=scout]
