@import 'fl/imports'

.fl-monitor
	overflow hidden
	position relative

	&-left-panel
		float left
		size 300px 512px

	&-buttons
		height 30px
		text-align right

	&-end-turn.fl-active
		animation-name fl-monitor-end-turn-anim
		-webkit-animation-name fl-monitor-end-turn-anim
		animation-duration .7s
		-webkit-animation-duration .7s
		animation-direction alternate
		-webkit-animation-direction alternate
		animation-iteration-count infinite
		-webkit-animation-iteration-count infinite
		color white

	&-log
		height 400px
		overflow-y auto

		& > .fl-good
			color #00DD00

		& > .fl-bad
			color #FF0000

	&-map
		float left
		margin-left 10px
		size 512px 512px

	&-panel
		float left
		margin-left 10px
		size 300px 512px

	&-cell
		background black none scroll 0 0 no-repeat
		border 1px solid black
		float left
		position relative
		size 16px 16px

		&.fl-scouted
			background-color #77BB44
			border-color #444444

			&.fl-rock
				background-color #7F3300

		& > .fl-unit
			display none

		&.fl-visible
			&[fl-base=n0]
				background-color #00FF00

			&[fl-base=n1]
				background-color #FF0000

			& > .fl-unit
				display block
				position absolute
				xy -1px -1px

		&.fl-selected
			border-color #FFFF00
			padding 0

		& > .fl-fog
			background black
			opacity .5
			position absolute
			size 16px 16px
			xy -1px -1px

@keyframes fl-monitor-end-turn-anim {
	from {
		background-color #00D000
		border-color #00D000
	}

	to {
		background-color #009000
		border-color #009000
	}
}